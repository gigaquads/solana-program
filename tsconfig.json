{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
