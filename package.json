{
  "name": "solana-program",
  "version": "0.1.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "author": "Daniel Gabriele",
  "description": "Higher-level client interface for interacting with on-chain Solana programs",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prepare": "yarn run build",
    "start:example:luckyNumber": "ts-node src/examples/luckyNumber.ts",
    "start-with-test-validator": "start-server-and-test 'solana-test-validator --reset --quiet' http://localhost:8899/health start",
    "lint": "eslint --ext .ts src/* && prettier --check \"src/**/*.ts\"",
    "lint:fix": "eslint --ext .ts src/* --fix && prettier --write \"src/**/*.ts\"",
    "pretty": "prettier --write '{,src/**/}*.ts'"
  },
  "dependencies": {
    "@solana/web3.js": "^1.30.2",
    "borsh": "^0.6.0",
    "mz": "^2.7.0",
    "reflect": "^0.1.3",
    "reflect-metadata": "^0.1.13",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/eslint": "^7.28.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/mz": "^2.7.4",
    "@types/node": "^16.11.7",
    "@types/prettier": "^2.4.1",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.4.1",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
